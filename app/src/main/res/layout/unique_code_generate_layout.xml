<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.androidlib.CustomFontViews.CustomTextviewRegular
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginStart="@dimen/five_dp"
        android:gravity="center_vertical"
        android:text="@string/unique_code_generated"
        android:textColor="@color/solid_black"
        android:textSize="@dimen/eighteen_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:padding="@dimen/five_dp">

        <com.androidlib.CustomFontViews.CustomTextviewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/eighteen_sp" />

        <com.androidlib.CustomFontViews.CustomTextviewRegular
            android:id="@+id/userNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sixteen_sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:padding="@dimen/five_dp">

        <com.androidlib.CustomFontViews.CustomTextviewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/unique_code"
            android:textColor="@android:color/black"
            android:textSize="@dimen/eighteen_sp" />

        <com.androidlib.CustomFontViews.CustomTextviewBold
            android:id="@+id/uniqueCodeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sixteen_sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:orientation="horizontal"
        android:padding="@dimen/five_dp">

        <com.androidlib.CustomFontViews.CustomButtonRegular
            android:id="@+id/copyCodeBT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_grey_transparent_bg"
            android:text="@string/copy_code" />

        <com.androidlib.CustomFontViews.CustomButtonRegular
            android:id="@+id/okBT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_grey_transparent_bg"
            android:text="@string/ok" />
    </LinearLayout>

</LinearLayout>